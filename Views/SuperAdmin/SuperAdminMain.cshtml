@model ProyectoVideoteca.Models.tb_MOVIESANDGENRES

<!DOCTYPE html>
<html lang="en">

<head>
    <link id="theme" rel="stylesheet" href="">
    @if (ViewBag.Mode == "claro")
    {
        <link rel="stylesheet" href="~/css/lightMode.css" asp-append-version="true" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/main_page.css">
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


</head>

<body>
    <input class="inp" id="inputSearch" placeholder="Search movie">
    <header>
        <button id="btnSearch">Search</button>
        <select id="mySelect"></select>
        <div id="toggle">
            <i class="indicator"></i>
        </div>
        <div class="container">
            <a class="logo" asp-controller="SuperAdmin" asp-action="SuperAdminMain">QSTREAM</a>
            <nav>
                <a asp-controller="SuperAdmin" asp-action="Display">User Management</a>
                <a asp-controller="SuperAdmin" asp-action="SuperAdminMain">Movies</a>
                <a asp-controller="SuperAdmin" asp-action="DisplaySeriesSuperAdmin">Series</a>
                <a asp-controller="SuperAdmin" asp-action="editProfile">Profile</a>
                <a asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
            </nav>
        </div>
    </header>

    <main>
        <!-- Carousel Results -->
        <div class="title-controls-container">
            <h3>Results</h3>
            <div class="indicators"></div>
        </div>
        <div class="d-felx flex-column justify-content-center align-items-center text-center">
            <div id="carRe">
                @foreach (var movie in Model.movies)
                {
                    <div class="movie">
                        <div class="video-thumbnail">
                            <a asp-controller="client" asp-action="detailsMovies" asp-route-TITLE="@movie.TITLE"><img src="@movie.IMG" class="carouselImg"></a>
                        </div>
                    </div>

                }
            </div>
        </div>

        <!-- Carousels -->
        @foreach (var genre in Model.genres)
        {
            <div class="movies-container">
                <div class="title-controls-container">
                    <h3>@genre.GENRE_NAME</h3>
                    <div class="indicators"></div>
                </div>
                <div class="main-container">
                    <button role="button" class="left-arrow"><i class="fas fa-angle-left"></i></button>
                    <!-- Movie Carousel -->
                    <div class="carousel-container">
                        <div class="carousel">
                            @foreach (var movie in Model.movies)
                            {
                                if (movie.GENRE.Equals(genre.GENRE_NAME))
                                {
                                    <div class="movie">
                                        <div class="video-thumbnail">
                                            <a asp-controller="SuperAdmin" asp-action="detailsMovies" asp-route-TITLE="@movie.TITLE"><img src="@movie.IMG" class="carouselImg"></a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <button role="button" class="right-arrow"><i class="fas fa-angle-right"></i></button>
                </div>
            </div>
        }


    </main>

    <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
    <script src="~/js/main_page.js"></script>
</body>

</html>
