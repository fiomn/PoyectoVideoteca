@model ProyectoVideoteca.Models.tb_MOVIESANDGENRES

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:wght@400;600&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="~/css/lightMode.css" asp-append-version="true" />
    @if (ViewBag.Mode == "claro")
    {
        <link rel="stylesheet" href="~/css/lightMode.css" asp-append-version="true" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/main_page.css">
    }

</head>

<body>    
    <header>   
        <div class="container">
            <a class="logo" asp-controller="SuperAdmin" asp-action="SuperAdminMain">QSTREAM</a>
            <nav>                
                <a asp-controller="SuperAdmin" asp-action="Display">User Management</a>
                <a asp-controller="SuperAdmin" asp-action="SuperAdminMain">Movies</a>
                <a asp-controller="SuperAdmin" asp-action="DisplaySeriesSuperAdmin">Series</a>
                <a asp-controller="SuperAdmin" asp-action="editProfile">Profile</a>
                <a asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
            </nav>
        </div>

        <div id="toggle">
            <i class="indicator"></i>
        </div>
    </header>
    <div class="searchNG">
        <input class="inp" id="inputSearch" placeholder="Search movie">
        <button id="btnSearch"><i class="fas fa-search"></i></button>
    </div>
    <!-- Carousel Results -->
    <div class="carousel-container" id="carRe"></div>

    <!--Aquí inicia la carga de cada carousel-->
    <div class="myCarousel">
        <!-- Contenido del carousel aquí -->
        <div class="slick-carousel">
            @foreach (var genre in Model.genres)
            {
                <div class="movies-container">
                    <div class="title-controls-container">
                        <h3>@genre.GENRE_NAME</h3>
                    </div>
                    <div class="main-container">
                        <!-- Movie Carousel -->
                        <div class="carousel-container">
                            <div class="galery">
                                @foreach (var movie in Model.movies)
                                {
                                    if (movie.GENRE.Equals(genre.GENRE_NAME))
                                    {
                                        <div class="movie">
                                            <div class="video-thumbnail">
                                                    <a asp-controller="SuperAdmin" asp-action="detailsMovies" asp-route-TITLE="@movie.TITLE"><img src="@movie.IMG" class="carouselImg" style="width:200px; height:300px;"></a>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('.galery').slick({
                    dots: true,
                    infinite: true,
                    speed: 300,
                    slidesToShow: 1,
                    centerMode: true,
                    variableWidth: true
                });
            });
        </script>
    }

    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.21/lodash.min.js"></script>
    *@

    <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>

</body>

</html>
