@model IEnumerable<ProyectoVideoteca.Models.tb_MOVIE>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/main_page.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:wght@400;600&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">

</head>

<body>
    <header>
        <div class="container">
            <h2 class="logo">QSTREAM</h2>
            <nav>
                <a href="#">Home</a>
                <a href="#">Movies</a>
                <a href="#">Series</a>
                <a asp-controller="client" asp-action="editProfile">Profile</a>
                <a asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
            </nav>
        </div>
        <div class="containerB">
            <input type="text" placeholder="Search">
            <div class="btn">
                <i class="fa fa-search"></i>
            </div>
        </div>
    </header>

    <main>
        <!-- Carousels -->
        @for (var i = 0; i < 5; i++)
        {
            @foreach (var item in Model)
            {
                <div class="title-controls-container">
                    <h3>@item.GENRE</h3>
                </div>
                
                <div class="main-container">
                    <button role="button" id="left-arrow" class="left-arrow"><i class="fas fa-angle-left"></i></button>
        
                    <!-- Movie Carousel -->
                    <div class="carousel-container">
                        <div class="carousel">
                            <div class="movie">
                                <div class="video-thumbnail">
                                    <a href="#"><img src="@item.IMG"></a>
                                    <div class="video-overlay">
                                        <div class="video-player">
                                            <iframe id="videoPlayer" src="" frameborder="0" allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                    <button role="button" id="right-arrow" class="right-arrow"><i class="fas fa-angle-right"></i></button>
                </div>
            }
        }
    </main>

    <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
    <script src="~/js/main_page.js"></script>
</body>

</html>
