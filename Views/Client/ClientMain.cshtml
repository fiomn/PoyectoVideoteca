@model ProyectoVideoteca.Models.tb_MOVIESANDGENRES

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/main_page.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:wght@400;600&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">

</head>

<body>
    <input class="inp" id="inputSearch" placeholder="Search movie">
    <header>
        <button id="btnSearch">Search</button>
        <select id="mySelect"></select>

        <div class="container">
            <a class="logo" asp-controller="client" asp-action="ClientMain">QSTREAM</a>
            <nav>
                <a asp-controller="client" asp-action="ClientMain">Movies</a>
                <a asp-controller="client" asp-action="displaySeries">Series</a>
                <a asp-controller="client" asp-action="editProfile">Profile</a>
                <a asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
            </nav>
        </div>
    </header>

    <main>
        <!-- Carousel Result -->
        <div class="title-controls-container">
            <h3>Results</h3>
            <div class="indicators"></div>
        </div>
        <div class="d-felx flex-column justify-content-center align-items-center text-center">
            <div id="carRe">
                @foreach (var movie in Model.movies)
                {
                    <div class="movie">
                        <div class="video-thumbnail">
                            <a asp-controller="client" asp-action="detailsMovies" asp-route-TITLE="@movie.TITLE"><img src="@movie.IMG" class="carouselImg"></a>
                        </div>
                    </div>

                }
            </div>
        </div>


        <!-- Carousels -->
        @foreach (var genre in Model.genres)
        {
            <div class="movies-container">
                <div class="title-controls-container">
                    <h3>@genre.GENRE_NAME</h3>
                    <div class="indicators"></div>
                </div>
                <div class="main-container">
                    <button role="button" class="left-arrow"><i class="fas fa-angle-left"></i></button>
                    <!-- Movie Carousel -->
                    <div class="carousel-container">
                        <div class="carousel">
                            @foreach (var movie in Model.movies)
                            {
                                if (movie.GENRE.Equals(genre.GENRE_NAME))
                                {
                                    <div class="movie">
                                        <div class="video-thumbnail">
                                            <a asp-controller="client" asp-action="detailsMovies" asp-route-TITLE="@movie.TITLE"><img src="@movie.IMG" class="carouselImg"></a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <button role="button" class="right-arrow"><i class="fas fa-angle-right"></i></button>
                </div>
            </div>
        }

    </main>

   <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
    < <script src="~/js/main_page.js"></script>
</body>

</html>
