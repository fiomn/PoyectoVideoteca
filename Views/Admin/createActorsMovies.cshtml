@model ProyectoVideoteca.Models.tb_SECONDARY_ACTOR

@{
    ViewData["Title"] = "createActorsMovies";
}
<head>
    @if (ViewBag.Mode == "claro")
    {
        <link rel="stylesheet" href="~/css/lightMode.css" asp-append-version="true" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/main_page.css">
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<h1>Create Actors Movies</h1>

<div id="pageMovies">
    <a asp-action="displayMovies" id="a">Back to List</a>
</div>

<hr />
<body>
    <div class="row">
        <div class="col-md-4" id="edit">
            <form asp-action="createActorsMovies">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ACTOR_NAME" class="control-label"></label>
                    <input asp-for="ACTOR_NAME" class="form-control" id="inputMovies" />
                    <span asp-validation-for="ACTOR_NAME" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ACTOR_IMG" class="control-label"></label>
                    <input asp-for="ACTOR_IMG" class="form-control" id="inputMovies" />
                    <span asp-validation-for="ACTOR_IMG" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" id="btnReport" />
                </div>
            </form>
        </div>
    </div>
   
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
