@model ProyectoVideoteca.Models.tb_MOVIE

@{
    ViewData["Title"] = "deleteMovies";
}

<head>
    @if (ViewBag.Mode == "claro")
    {
        <link rel="stylesheet" href="~/css/lightMode.css" asp-append-version="true" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/main_page.css">
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<h1>Delete Movie</h1>

<body>
    <h3>Are you sure you want to delete this movie?</h3>
    <div id="pageMovies">
        <form asp-action="deleteMovies">
            <input type="hidden" asp-for="TITLE" />
            <input type="submit" value="Delete" class="btn btn-danger" id="btnReport" /> 
           
        </form>
        <a asp-action="displayMovies" id="a">Back to List</a>
    </div>
    
    <div>
        <hr />
        <dl class="row" >
            <dt class="col-sm-2" id="edit">
                @Html.DisplayNameFor(model => model.TITLE)
            </dt>
            <dd class="col-sm-10" id="text">
                @Html.DisplayFor(model => model.TITLE)
            </dd>
            <dt class="col-sm-2" id="edit">
                @Html.DisplayNameFor(model => model.SYNOPSIS)
            </dt>
            <dd class="col-sm-10" id="text">
                @Html.DisplayFor(model => model.SYNOPSIS)
            </dd>
            <dt class="col-sm-2" id="edit">
                @Html.DisplayNameFor(model => model.IMG)
            </dt>
            <dd class="col-sm-10" id="text">
                <img src="@Html.DisplayFor(model => model.IMG)" class="imageMovie" width="30%" height="80%" style="max-width: 50%; height: auto;" />
            </dd>
            <dt class="col-sm-2" id="edit">
                @Html.DisplayNameFor(model => model.GENRE)
            </dt>
            <dd class="col-sm-10" id="text">
                @Html.DisplayFor(model => model.GENRE)
            </dd>
            <dt class="col-sm-2" id="edit">
                @Html.DisplayNameFor(model => model.ACTOR_NAME)
            </dt>
            <dd class="col-sm-10" id="text">
                @Html.DisplayFor(model => model.ACTOR_NAME)
            </dd>
            <dt class="col-sm-2" id="edit">
                @Html.DisplayNameFor(model => model.DIRECTOR_NAME)
            </dt>
            <dd class="col-sm-10" id="text">
                @Html.DisplayFor(model => model.DIRECTOR_NAME)
            </dd>
        </dl>

    </div>
</body>