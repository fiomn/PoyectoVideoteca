@model ProyectoVideoteca.Models.tb_MOVIESANDGENRES

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:wght@400;600&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    @if (ViewBag.Mode == "claro")
    {
        <link rel="stylesheet" href="~/css/lightMode.css" asp-append-version="true" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/main_page.css">
    }
</head>

<body>
    <header>
        <div class="container">
            <a class="logo" asp-controller="Admin" asp-action="AdminMain">QSTREAM</a>
            <nav>
                <a asp-controller="Admin" asp-action="Display">User Management</a>
                <a asp-controller="Admin" asp-action="DisplayMovies">Movies Management</a>
                <a asp-controller="Admin" asp-action="DisplaySeries">Series Management</a>
                <a asp-controller="Admin" asp-action="AdminMain">Movies</a>
                <a asp-controller="Admin" asp-action="DisplaySeriesAdmin">Series</a>
                <a asp-controller="Admin" asp-action="editProfile">Profile</a>
                <a asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
            </nav>
        </div>
    </header>

    <div class="searchNG">
        <input class="inp" id="inputSearch" placeholder="Search movie">
        <button id="btnSearch"><i class="fas fa-search"></i></button>
    </div>

    <main>
        <!-- Carousel Results -->
        <div class="d-felx flex-column justify-content-center align-items-center text-center">
            <h3 id="carRe">Results</h3>
            <div id="carRe">
                @foreach (var movie in Model.movies)
                {
                    <div class="movie">
                        <div class="video-thumbnail">
                            <a asp-controller="client" asp-action="detailsMovies" asp-route-TITLE="@movie.TITLE"><img src="@movie.IMG" class="carouselImg"></a>
                        </div>
                    </div>

                }
            </div>
        </div>

        <!-- Carousels -->
        @foreach (var genre in Model.genres)
        {
            <div class="movies-container">
                <div class="title-controls-container">
                    <h3>@genre.GENRE_NAME</h3>
                    <div class="indicators"></div>
                </div>
                <div class="main-container">
                    <button role="button" class="left-arrow"><i class="fas fa-angle-left"></i></button>
                    <!-- Movie Carousel -->
                    <div class="carousel-container">
                        <div class="carousel">
                            @foreach (var movie in Model.movies)
                            {
                                if (movie.GENRE.Equals(genre.GENRE_NAME))
                                {
                                    <div class="movie">
                                        <div class="video-thumbnail">
                                            <a asp-controller="Admin" asp-action="detailsMovies" asp-route-TITLE="@movie.TITLE"><img src="@movie.IMG" class="carouselImg"></a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <button role="button" class="right-arrow"><i class="fas fa-angle-right"></i></button>
                </div>
            </div>
        }


    </main>

    <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
    <script src="~/js/main_page.js"></script>
</body>

</html>
