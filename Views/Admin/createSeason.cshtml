@model ProyectoVideoteca.Models.tb_SEASON

<head>
    @if (ViewBag.Mode == "claro")
    {
        <link rel="stylesheet" href="~/css/lightMode.css" asp-append-version="true" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/main_page.css">
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<h1>Create New Season</h1>

<body>
    <div id="pageMovies">
        <a asp-action="displaySeries" id="a">Back to List</a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4" id="edit">
            <form asp-action="createSeason">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NUMBER" class="control-label"></label>
                    <input asp-for="NUMBER" class="form-control" id="inputMovies" />
                    <span asp-validation-for="NUMBER" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TITLE" class="control-label"></label>
                    <input asp-for="TITLE" class="form-control" id="inputMovies" />
                </div>
                <div class="form-group">
                    <label asp-for="EPISODES_NUMBER" class="control-label"></label>
                    <input asp-for="EPISODES_NUMBER" class="form-control" id="inputMovies" />
                    <span asp-validation-for="EPISODES_NUMBER" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VIDEO" class="control-label"></label>
                    <input asp-for="VIDEO" class="form-control" id="inputMovies" />
                    <span asp-validation-for="VIDEO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" id="btnReport" />
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
